input [7:0] r;
input sampler_rx;

reg [7:0] r_expected;

reg [7:0] r_prev;

reg [7:0] r_expected_prev;

reg [7:0] last_r_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;



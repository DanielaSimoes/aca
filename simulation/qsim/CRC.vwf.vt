begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	r_prev = r;
end

// update expected /o prevs

always @(trigger)
begin
	r_expected_prev = r_expected;
end


// expected r[ 7 ]
initial
